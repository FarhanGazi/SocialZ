<div id="likes" style="float: right; padding-right: 5px">
	<% if current_user.liked? @post %>
	<small class="text-muted"><%= pluralize(@post.get_likes.size, 'like') %></small>
	<%= link_to unlike_post_path(@post), method: :put, class: "unlike_post", remote: true do %>
	<i class="fa fa-heart" style="color:red"></i>
	<% end %>
	<% else %>
	<small class="text-muted"><%= pluralize(@post.get_likes.size, 'like') %></small>
	<%= link_to like_post_path(@post), method: :put, class: "like_post", remote: true do %>
	<i class="fa fa-heart-o" style="color:black"></i>
	<% end %>
	<% end %>
</div>