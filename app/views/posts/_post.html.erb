<div class="col">
	<div class="card mb-4 shadow-sm">
		<%= image_tag(post.image, :class => 'card-img-top') %>
		<div class="card-body">
			<h5 class="card-title"><%= post.title %></h5>
			<p class="card-text"><%= post.description.truncate(200, omission: '... (continued)') %></p>
			<div class="d-flex justify-content-between align-items-center">
				<div class="btn-group">
					<%= link_to 'Show', post, :class => 'btn btn-sm btn-outline-primary'%>
					<%if current_user.present? && current_user == post.user%>
					<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-sm btn-outline-secondary' %>
					<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-outline-danger' %>
					<%end%>
				</div>
				<div class="d-inline-block">
					<div style="float: right;">
						<small class="text-muted"> <%=time_ago_in_words(post.updated_at)%> </small>
						<i class="fa fa-calendar-times-o"></i>
					</div>
					<div style="float: right;padding-right: 5px">
						<small class="text-muted"> <%=post.comments.count%> comments</small>
						<i class="fa fa-comment-o"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>